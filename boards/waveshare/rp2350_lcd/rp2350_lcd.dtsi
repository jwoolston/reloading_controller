#include <freq.h>

#include <zephyr/dt-bindings/i2c/i2c.h>
#include <zephyr/dt-bindings/pwm/pwm.h>
#include <zephyr/dt-bindings/display/panel.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

#include "rp2350_lcd-pinctrl.dtsi"

/ {
	model = "Waveshare RP2350 LCD-1.28";
	compatible = "waveshare,rp2350_lcd";

	aliases {
		led0 = &led0;
		pwm-lcd0 = &pwm_led0;
		watchdog0 = &wdt0;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,code-partition = &code_partition;
		zephyr,display = &gc9a01;
	};

	leds {
		compatible = "gpio-leds";
		status = "disabled";
		led0: led_0 {
			gpios = <&gpio0 25 GPIO_ACTIVE_HIGH>;
			label = "LED";
		};
	};

	pwm_leds {
		compatible = "pwm-leds";
		status = "okay";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm 9 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "PWM_LCD";
		};
	};

	/* Touch Controller */
	/*lvgl_pointer {
		compatible = "zephyr,lvgl-pointer-input";
		input = <&cst816s>;
	};

	/* MIPI DBI */
	mipi_dbi {
		compatible = "zephyr,mipi-dbi-spi";
		spi-dev = <&spi1>;
		dc-gpios = <&gpio0 8 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
		write-only;
		#address-cells = <1>;
		#size-cells = <0>;

		gc9a01: gc9a01@0 {
			status = "okay";
			compatible = "galaxycore,gc9x01x";
			reg = <0>;
			mipi-max-frequency = <100000000>;
			pixel-format = <PANEL_PIXEL_FORMAT_RGB_565>;
			display-inversion;
			width = <240>;
			height = <240>;
		};
	};

	h1: h1 {
		compatible = "waveshare,rp2350-lcd-h1";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map = <0 0 &gpio0 8 0>,	/* GP8 */
			<1 0 &gpio0 0 0>,	/* GP0 */
			<2 0 &gpio0 9 0>,	/* GP9 */
			<3 0 &gpio0 1 0>,	/* GP1 */
			<4 0 &gpio0 10 0>,	/* GP10 */
			<5 0 &gpio0 2 0>,	/* GP2 */
			<6 0 &gpio0 11 0>,	/* GP11 */
			<7 0 &gpio0 3 0>,	/* GP3 */
			<8 0 &gpio0 12 0>,	/* GP12 */
			<9 0 &gpio0 4 0>,	/* GP4 */
			<10 0 &gpio0 13 0>,	/* GP13 */
			<11 0 &gpio0 5 0>,	/* GP5 */
			<12 0 &gpio0 14 0>,	/* GP14 */
			<13 0 &gpio0 6 0>,	/* GP6 */
			<14 0 &gpio0 15 0>,	/* GP15 */
			<15 0 &gpio0 7 0>;	/* GP7 */
	};

	h2: h2 {
		compatible = "waveshare,rp2350-lcd-h2";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map = <0 0 &gpio0 8 0>,	/* GP8 */
				   <1 0 &gpio0 0 0>,	/* GP0 */
				   <2 0 &gpio0 9 0>,	/* GP9 */
				   <3 0 &gpio0 1 0>,	/* GP1 */
				   <4 0 &gpio0 10 0>,	/* GP10 */
				   <5 0 &gpio0 2 0>,	/* GP2 */
				   <6 0 &gpio0 11 0>,	/* GP11 */
				   <7 0 &gpio0 3 0>,	/* GP3 */
				   <8 0 &gpio0 12 0>,	/* GP12 */
				   <9 0 &gpio0 4 0>,	/* GP4 */
				   <10 0 &gpio0 13 0>,	/* GP13 */
				   <11 0 &gpio0 5 0>,	/* GP5 */
				   <12 0 &gpio0 14 0>,	/* GP14 */
				   <13 0 &gpio0 6 0>,	/* GP6 */
				   <14 0 &gpio0 15 0>,	/* GP15 */
				   <15 0 &gpio0 7 0>;	/* GP7 */
	};

};

&flash0 {
	reg = <0x10000000 DT_SIZE_M(4)>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Reserved memory for an image definition block. The block is much
		 * smaller than 256 bytes, but in practice the linker places the vector
		 * table at a much larger alignment offset.
		 */
		image_def: partition@0 {
			label = "image_def";
			reg = <0x00000000 0x100>;
			read-only;
		};

		/*
		 * Usable flash. Starts at 0x100, after the image definition block.
		 * The partition size is 4MB minus the 0x100 bytes taken by the
		 * image definition.
		 */
		code_partition: partition@100 {
			label = "code-partition";
			reg = <0x100 (DT_SIZE_M(4) - 0x100)>;
			read-only;
		};
	};
};

&uart0 {
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&gpio0 {
	status = "okay";
};

&spi1 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&spi1_default>;
	pinctrl-names = "default";
	cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
};

&i2c1 {
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c1_default>;
	pinctrl-names = "default";
	status = "okay";
};

&adc {
	pinctrl-0 = <&adc_default>;
	pinctrl-names = "default";
	status = "okay";
};

&pwm {
	pinctrl-0 = <&pwm_ch4b_default>;
	pinctrl-names = "default";
	divider-int-0 = <255>;
	status = "okay";
};

&timer0 {
	status = "okay";
};

zephyr_udc0: &usbd {
	status = "okay";
};

pico_serial: &uart0 {};
